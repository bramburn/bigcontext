                            exclude: ['**/node_modules/**', '**/dist/**', '**/build/**', '**/.git/**'],
                            fileTypes: ['typescript', 'javascript', 'python', 'java', 'markdown'],
                            maxFileSize: 2097152 // 2MB
                        },
