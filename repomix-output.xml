        <h3>Related Files:</h3>
        <ul>
          {#each relatedFiles as file}
            <li>{file}</li>
          {/each}
        </ul>
      {/if}
    </main>

    <style>
      /* Add basic styling for inputs and buttons to match VS Code theme */
