{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"types": ["vitest/globals", "vitest/jsdom"]
	},
	"exclude": [
		"webview/**/*",
		"webview-backup-*/**/*",
		"webview-simple/**/*",
		"webview-react/**/*",
		"src/tests/**/*",
		"tests/**/*",
		"specs/**/*",
		"vitest.config.ts"
	]
}
